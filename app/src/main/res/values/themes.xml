<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MultiplicationGame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorWhiteLight</item>
        <item name="colorOnBackground">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorButton</item>
        <item name="colorOnSecondary">@color/colorWhiteLight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorStatusBar</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorError">@color/colorSnackBarErrorBg</item>
        <item name="snackbarStyle">@style/Widget.MyApp.Snackbar</item>

    </style>

    <style name="Theme.MultiplicationGame.NoActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.MultiplicationGame.FullScreen" parent="Theme.MultiplicationGame.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>
</resources>