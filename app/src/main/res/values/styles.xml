<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorSecondary3</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <!-- TextViews -->
    <style name="TextView">
        <item name="android:fontFamily">@font/core_sans_cr_55_medium</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/txt_font_size_header_14</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/core_sans_cr_55_medium</item>
        <item name="iconSize">@dimen/btn_font_size_small_14</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="android:paddingEnd">19dp</item>
        <item name="android:paddingStart">19dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/btn_font_size_small_14</item>
        <item name="backgroundTint">@null</item>
    </style>

    <!-- TextInputLayouts -->
    <style name="TextInputLayoutStyle_2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <!-- TextEditInputs -->
    <style name="TextEditInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/core_sans_cr_55_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textColorHint">@color/colorSecondary4</item>
        <item name="android:textSize">@dimen/txt_font_size_header_16</item>
    </style>

    <style name="Widget.MyApp.Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <!-- Custom margin -->
        <item name="android:layout_margin">0dp</item>
        <!-- Custom padding -->
        <item name="android:padding">0dp</item>
    </style>

</resources>