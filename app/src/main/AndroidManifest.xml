<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unipi.p17172p17168p17164.multiplicationgame">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MultiplicationGame"
        android:fullBackupContent="@xml/backup_descriptor" >
        
        <!-- region [START Activities] -->
        <!-- Splash Screen Activity -->
        <activity
            android:name="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.SplashActivity"
            android:theme="@style/Theme.EMarket.NoActionBar"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    
        <!-- Home/Main Activity -->
        <activity
            android:name="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.MainMenuActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.EMarket.NoActionBar3">
        </activity>
    
        <!-- Product Details Activity -->
        <activity
            android:name="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.ProductDetailsActivity"
            android:label=""
            android:theme="@style/Theme.EMarket.NoActionBar3"
            android:parentActivityName="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.MainActivity">
    
            <intent-filter>
                <action android:name="ProductDetailsActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
    
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.MainActivity" />
        </activity>
    
        <!-- Notifications Activity -->
        <activity
            android:name="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.NotificationsActivity"
            android:label="@string/label_activity_notifications"
            android:theme="@style/Theme.EMarket.NoActionBar3"
            android:parentActivityName="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.MainActivity">
    
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.MainActivity" />
        </activity>
    
        <!-- Sign In activity -->
        <activity
            android:name="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.SignInActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.EMarket.NoActionBar4"
            android:parentActivityName="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.MainActivity">
    
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.MainActivity" />
        </activity>
    
        <!-- Sign Up activity -->
        <activity
            android:name="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.SignUpActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.EMarket.NoActionBar4"
            android:parentActivityName="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.SignInActivity">
    
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.SignInActivity" />
        </activity>
    
        <!-- Forgot Password activity -->
        <activity
            android:name="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.ForgotPasswordActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.EMarket.NoActionBar4"
            android:parentActivityName="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.SignInActivity">
    
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.SignInActivity" />
        </activity>
    
        <!-- Update Profile activity -->
        <activity
            android:name="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.UpdateProfileActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.EMarket.NoActionBar4"
            android:parentActivityName="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.SignInActivity">
    
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.SignInActivity" />
        </activity>
        <!-- All Categories activity -->
        <activity
            android:name="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.AllCategoriesActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.EMarket.NoActionBar3"
            android:parentActivityName="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.MainActivity">
    
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.unipi.p17172p17168p17164.multiplicationgame.ui.activities.MainActivity" />
        </activity>
        <!-- endregion [END Activities] -->
        
    </application>
</manifest>